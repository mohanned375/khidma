<?xml version='1.0' encoding='utf-8'?>
<widget id="com.serviceplatform.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>منصة خدمة</name>
    <description>
        منصة لربط العملاء بمقدمي الخدمات في مختلف المجالات
    </description>
    <author email="info@serviceplatform.com" href="https://serviceplatform.com">
        فريق منصة خدمة
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="mdpi" src="images/icon-192x192.png" />
        <icon density="hdpi" src="images/icon-192x192.png" />
        <icon density="xhdpi" src="images/icon-192x192.png" />
        <icon density="xxhdpi" src="images/icon-192x192.png" />
        <icon density="xxxhdpi" src="images/icon-192x192.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon height="57" src="images/icon-192x192.png" width="57" />
        <icon height="114" src="images/icon-192x192.png" width="114" />
        <icon height="40" src="images/icon-192x192.png" width="40" />
        <icon height="80" src="images/icon-192x192.png" width="80" />
        <icon height="50" src="images/icon-192x192.png" width="50" />
        <icon height="100" src="images/icon-192x192.png" width="100" />
        <icon height="60" src="images/icon-192x192.png" width="60" />
        <icon height="120" src="images/icon-192x192.png" width="120" />
        <icon height="76" src="images/icon-192x192.png" width="76" />
        <icon height="152" src="images/icon-192x192.png" width="152" />
        <icon height="29" src="images/icon-192x192.png" width="29" />
        <icon height="58" src="images/icon-192x192.png" width="58" />
        <icon height="87" src="images/icon-192x192.png" width="87" />
        <icon height="80" src="images/icon-192x192.png" width="80" />
        <icon height="120" src="images/icon-192x192.png" width="120" />
        <icon height="180" src="images/icon-192x192.png" width="180" />
    </platform>
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="16" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
<widget/>
